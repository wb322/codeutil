  port: 8080
spring: 
  application:  
    name: [project] #指定服务名
  datasource:
    driverClassName: com.mysql.cj.jdbc.Driver #[driverName]
    url: [url]&useSSL=false&serverTimezone=UTC
    username: [dbuser]
    password: [dbpassword]
  thymeleaf:
    cache: false
    prefix: classpath:/templates/
    suffix: .html
  jpa:
    hibernate:
      ddl-auto: none
    database: mysql
    show-sql: true
    properties:
      hibernate:
        format_sql: true  #格式化sql语句
      open-in-view: true

